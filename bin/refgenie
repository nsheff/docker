echo $1  # First argument is your fasta file
echo $2  # Second argument is your genomes folder ($GENOMES)

file=`basename $1`
echo $file
echo "Run container..."
# Mount host genome folder to container /genomes
docker run -itd --name refgenie -v $2:/genomes nsheff/refgenie

echo "Copy file..."
# Add fasta file to /$file
docker cp $1 refgenie:/$file

echo "Execute refgenie..."
#docker exec refgenie python /refgenie/src/refgenie.py --input /$file  --outfolder /genomes
docker exec refgenie python /refgenie/src/refgenie.py "$@"

echo "Stopping container..."
docker stop refgenie

echo "Remove container..."
docker rm refgenie




