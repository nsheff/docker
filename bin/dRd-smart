#!/bin/bash

isRunning=`docker ps --filter name=myRd --format "table{{.Names}}" | sed '1d' | wc -l`

if [ "$isRunning" == "1" ]; then
	echo "Container is running. Attaching..."
	docker attach myRd
else
	exists=`docker ps -a --filter name=myRd --format "table{{.Names}}" | sed '1d' | wc -l`
	if [ "$exists" == "1" ]; then
	echo "Container exits but is turned off. Starting and attaching..."
	dRd-start
	else
	echo "Container does not exist. Creating a new one..."
	dRd-run
	fi
fi

